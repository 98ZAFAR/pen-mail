# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/penMail?retryWrites=true&w=majority

# JWT Secret (Generate a strong random string)
# Use: openssl rand -base64 32 OR node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Client URL (Frontend)
CLIENT_URL=http://localhost:5173

# Cloudinary Configuration (Get from cloudinary.com)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (SMTP)
# For Gmail: Enable 2FA and generate App Password at myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
ADMIN_EMAIL=your_email@gmail.com
ADMIN_PASSWORD=your_gmail_app_password
